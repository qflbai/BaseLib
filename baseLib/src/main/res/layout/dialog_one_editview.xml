<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="30dip"
    android:layout_marginRight="30dip"
    android:gravity="center"
    android:orientation="vertical">
    <!--标题-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="@drawable/item_selector"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_title_one_editview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Title"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"

        >

        <LinearLayout
            android:id="@+id/ll_device_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:layout_marginBottom="3dip"
                android:text="要与以下蓝牙配对"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_follow_device_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:layout_marginBottom="3dip"
                android:text=""
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:layout_marginBottom="0dip"
                android:text="请输入蓝牙设备的密码"
                android:textSize="16sp" />

        </LinearLayout>

        <EditText
            android:id="@+id/tv_input1_editview"
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:layout_marginLeft="12dip"
            android:layout_marginTop="5dip"
            android:layout_marginRight="12dip"
            android:layout_marginBottom="5dip"
            android:hint=""
            android:padding="@dimen/dp_10"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/tv_input2_editview"
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:layout_marginLeft="12dip"
            android:layout_marginTop="5dip"
            android:layout_marginRight="12dip"
            android:layout_marginBottom="5dip"
            android:padding="@dimen/dp_10"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_show_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dip"
            android:text=""
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="45dip"
        android:background="@drawable/item_selector"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_left_one_editview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="取消"
            android:textColor="@color/_666666" />

        <Button
            android:id="@+id/btn_right_one_editview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="确认"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

</LinearLayout>
