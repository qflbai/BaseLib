<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <org.angmarch.views.NiceSpinnerPro
        android:id="@+id/np"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:arrowBgDrawable="?attr/selectableItemBackgroundBorderless"
        app:arrowDrawable="@mipmap/ic_expand_more"
        app:entries="@array/sp"
        app:isTextBold="true"
        app:isWrapContent="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:text="+86"
        app:textPadingRight="@dimen/dp_60" />


    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_50"

        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintTop_toBottomOf="@id/np">

        <EditText
            android:id="@+id/et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:clickable="false"
            android:enabled="false"
            android:text="dddddd" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>